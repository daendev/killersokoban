<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphics.menusystem.SettingsMenuController"
            prefHeight="400.0" prefWidth="600.0"
            alignment="CENTER" spacing="20">

    <Label text="Settings" />

    <HBox alignment="CENTER" spacing="30">
        <VBox alignment="CENTER_RIGHT" spacing="20">
            <Label text="Map Width" />
            <Label text="Map Height" />
            <Label text="Players" />
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="20">
            <TextField prefWidth="40" />
            <TextField prefWidth="40" />
            <TextField prefWidth="40" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="30">
        <Button text="Save" onAction="#saveButton" />
        <Button text="Back" onAction="#backButton" />
    </HBox>


</VBox>
